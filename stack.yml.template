version: '3.7'

services:
  cron:
    image: registry.gitlab.tpwd.de/ikusei/smart-village-app-rss-importer
    networks:
      - default
      - smart-village-app-${PROJECT}-rss-importer
    environment:
      RAILS_ENV: production
      RAILS_LOG_TO_STDOUT: 1
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.hostname == ${NODENAME}
      restart_policy:
        condition: on-failure

  db:
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.hostname == ${NODENAME}
    networks:
      smart-village-app-%PROJECT%-rss-importer:
        aliases:
          - smart-village-app-${PROJECT}-rss-importer
      adminer:
        aliases:
          - json-2-graphql-converter

networks:
  smart-village-app-%PROJECT%-rss-importer:
    external: true
  adminer:
    external: true
  public:
    external: true
